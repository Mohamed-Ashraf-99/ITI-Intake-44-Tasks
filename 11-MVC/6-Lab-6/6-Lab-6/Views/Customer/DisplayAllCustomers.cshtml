@using BLL.ModelVM;

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, Your.Assembly.Name

@model List<CustomerVM>

@{
    ViewData["Title"] = "Display Customers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Customers</h1>
<a asp-controller="Customer" asp-action="Create" class="btn btn-primary"> Add Employee </a>
<table id="myTable" class="display">
    <thead>
        <tr>
            <th>ID</th>
            <th> Name</th>
            <th>Gender</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th>Number of Orders</th>
            <th>Actions</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.Id</td>
                <td>@customer.Name</td>
                <td>@customer.Gender</td>
                <td>@customer.email</td>
                <td>@customer.phoneNum</td>
                <td>@customer.Orders.Count()</td>

                <td class="dropdown">

                    <button class="btn btn-sm btn-icon btn-color-primary btn-active-light-primary" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="bi bi-menu-down"></i>
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                        <li><a class="dropdown-item" asp-action="Details" asp-controller="Customer" asp-route-id="@customer.Id">Select</a></li>
                        <li><a class="dropdown-item" asp-action="Edit" asp-controller="Customer" asp-route-id="@customer.Id">Edit</a></li>
                        <li><a class="dropdown-item" asp-action="Delete" asp-controller="Customer" asp-route-id="@customer.Id">Delete</a></li>
                    </ul>

                </td>
            </tr>
        }
    </tbody>
</table>

@section JS {
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        });
    </script>
}