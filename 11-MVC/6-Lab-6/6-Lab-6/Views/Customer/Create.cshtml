@using BLL.ModelVM;

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, Your.Assembly.Name

@model CustomerVM
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card m-5" style="width:60rem;margin:auto;">
    <h1>Add Customer</h1>
    <div class="card-body">
        @* <form asp-action="" asp-controller="" enctype="multipart/form-data"> *@
        <form method="post" asp-action="Create">

            <div class="mb-3">
                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Customer Name</label>
                    <input type="text" asp-for="Name" class="form-control" id="EmployeeName" maxlength="50">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="email" class="form-label">Employee Email</label>
                <input type="text" asp-for="email" class="form-control" id="Email" aria-describedby="">
                <span asp-validation-for="email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="phoneNum" class="form-label">Customer Phone</label>
                <input type="text" asp-for="phoneNum" class="form-control" id="password" aria-describedby="">
                <span asp-validation-for="phoneNum" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Gender" class="form-label">Customer Gender</label>
                <input type="text" asp-for="Gender" class="form-control" id="password" aria-describedby="">
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>


     


            <div class="mb-3">
                <label asp-for="Id" class="form-label">Order Number</label>
                <select asp-for="Id" class="form-control" id="DeptID" aria-describedby="">
                    <option value=""></option>
                    @foreach (var order in Model.OrdersList)
                    {
                        <option value="@order.CustId">@order.CustId</option>
                    }
                </select>
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>

            <div class="mb-3">
           @*      <label asp-for="MgrHireDate" class="form-label">Manager Hire Date </label>
                <input type="date" asp-for="MgrHireDate" class="form-control" id="MgrHireDate" aria-describedby="">
                <span asp-validation-for="MgrHireDate" class="text-danger"></span> *@
            </div>

         
            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Submit</button>
                <button type="reset" class="btn btn-primary">Reset</button>
                <button type="" asp-controller="Customer" asp-action="DisplayAllCustomers" class="btn btn-outline-secondary">Cancel</button>

            </div>

        </form>
        </<div>
        </div>

        @section JS {
            @{
                Html.RenderPartial("_ValidationScriptsPartial");
            }

        }

